<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_transition_colors"
    android:fitsSystemWindows="true"
    tools:context=".ui.SplashScreenActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/value_150dp"
        android:layout_height="@dimen/value_150dp"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:src="@drawable/logo_round"
        android:transitionName="@string/transition_splash_shared_logo"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/value_25dp"
        />

</FrameLayout>