<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prevention_blue_bg_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/value_16dp"
        android:layout_marginLeft="@dimen/value_16dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="@dimen/value_16dp"
        android:layout_marginRight="@dimen/value_16dp"
        android:paddingBottom="@dimen/value_50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_5dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_accent_color_shapes" />

                <ImageView
                    android:id="@+id/white_shape"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_white_shapes" />


                <TextView
                    android:id="@+id/option_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_50dp"
                    android:layout_below="@+id/white_shape"
                    android:background="@color/layouts_main_white_bg"
                    android:paddingLeft="@dimen/value_10dp"
                    android:paddingTop="@dimen/value_10dp"
                    android:paddingRight="@dimen/value_10dp"
                    android:paddingBottom="@dimen/value_4dp"
                    android:text="Evitez tout contact raprochÃ©, y compris les salutations et les accolades avec les autres"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="@dimen/value_18sp"
                    app:autoSizeTextType="uniform" />

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="@dimen/value_150dp"
                    android:layout_height="@dimen/value_150dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_movement" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_15dp"
                android:clipChildren="false"
                android:clipToPadding="false">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="@dimen/value_40dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_accent_color_shapes" />

                <ImageView
                    android:id="@+id/white_shape2"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="@dimen/value_40dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_white_shapes" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_40dp"
                    android:background="@color/layouts_main_white_bg"
                    android:paddingLeft="@dimen/value_10dp"
                    android:paddingTop="@dimen/value_5dp"
                    android:paddingRight="@dimen/value_10dp"
                    android:paddingBottom="@dimen/value_4dp"
                    android:text="Maintenez une distance d'au moins 1m avec les autres personnes"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="@dimen/value_18sp"
                    app:autoSizeTextType="uniform" />


                <ImageView
                    android:id="@+id/image_view2"
                    android:layout_width="@dimen/value_150dp"
                    android:layout_height="@dimen/value_150dp"
                    android:layout_marginLeft="@dimen/value_10dp"
                    android:layout_marginTop="@dimen/value_50dp"
                    android:paddingBottom="@dimen/value_10dp"
                    android:src="@drawable/ic_movement_2" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="@dimen/value_150dp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_accent_color_shapes" />

                <ImageView
                    android:id="@+id/white_shape3"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="160dp"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_white_shapes" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_below="@+id/white_shape3"
                    android:background="@color/layouts_main_white_bg"
                    android:paddingLeft="@dimen/value_10dp"
                    android:paddingTop="@dimen/value_10dp"
                    android:paddingRight="@dimen/value_10dp"
                    android:paddingBottom="@dimen/value_4dp"
                    android:text="Evitez les attroupements, les lieux et les transports publics"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="@dimen/value_18sp"
                    app:autoSizeTextType="uniform" />

                <ImageView
                    android:id="@+id/image_view3"
                    android:layout_width="@dimen/value_150dp"
                    android:layout_height="@dimen/value_150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="@dimen/value_20dp"
                    android:clipToPadding="true"
                    android:src="@drawable/ic_movement_3" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

