<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clipToPadding="false"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="@dimen/main_cards_radius"
                app:cardUseCompatPadding="false">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#F3EFEF"
                    android:paddingLeft="8dp"
                    android:paddingTop="10dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/main_intro_about_app"
                    android:textSize="@dimen/app_main_text_size" />

            </androidx.cardview.widget.CardView>


            <com.github.florent37.arclayout.ArcLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/layouts_main_white_bg"
                android:elevation="2dp"
                app:arc_cropDirection="cropOutside"
                app:arc_height="20dp"
                app:arc_position="bottom">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/layouts_main_white_bg" />
            </com.github.florent37.arclayout.ArcLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/prevention_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/ic_bg_fragment_main_tbox_green_color"
                android:rotation="348" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_prevention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:clipToPadding="false"
                app:cardCornerRadius="@dimen/main_cards_radius"
                app:cardElevation="@dimen/basic_cardview_elevation_3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:clipToPadding="false">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_covid_anim_prevention"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginEnd="@dimen/value_8dp"
                            android:layout_marginRight="@dimen/value_8dp"
                            android:transitionName="@string/transition_shared_main_activity_lottie_image"
                            app:lottie_autoPlay="true"
                            app:lottie_cacheComposition="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/covid_armor" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/tboxGreenLight"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/main_frag_prevention_btn"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_bg_fragment_main_tbox_green_color"
                    android:elevation="0dp"
                    android:rotation="332" />


            </androidx.cardview.widget.CardView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/diagnosis_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/ic_bg_fragment_main_tbox_blue_color"
                android:rotation="348" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_diagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                app:cardCornerRadius="@dimen/main_cards_radius"
                app:cardElevation="@dimen/basic_cardview_elevation_3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:padding="10dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_covid_anim_diagnosis"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="5dp"
                            android:transitionName="shared_lottie_icon2"
                            app:lottie_autoPlay="true"
                            app:lottie_cacheComposition="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/covid_doctor" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/tboxBlue"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/main_diagnosis_title"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_bg_fragment_main_tbox_blue_color"
                    android:elevation="0dp"
                    android:rotation="332" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:visibility="visible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/diagnosis_subtitle"
                android:textColor="#616161"
                android:textSize="14sp" />
        </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/main_covid_cases_worldwide"
    android:layout_marginLeft="@dimen/value_16dp"
    android:layout_marginStart="@dimen/value_16dp"
    android:layout_marginRight="@dimen/value_16dp"
    android:layout_marginEnd="@dimen/value_16dp"
    android:layout_marginTop="20dp"

    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_16dp"
            android:layout_marginStart="@dimen/value_16dp"
            android:layout_marginRight="@dimen/value_16dp"
            android:layout_marginEnd="@dimen/value_16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="130dp"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageCountryFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/cg"
                android:minWidth="50dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_overlay"
                        android:text="@string/main_covid_confirmed"
                        />
                    <TextView
                        android:id="@+id/casesConfirmedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:textColor="@color/materialYellow"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_overlay"
                        android:text="@string/main_covid_active"
                        />
                    <TextView
                        android:id="@+id/casesActiveCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:textColor="@color/materialYellow"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_overlay"
                        android:text="@string/main_covid_recovered"
                        />
                    <TextView
                        android:id="@+id/casesRecoveredCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:textColor="@color/materialYellow"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_overlay"
                        android:text="@string/main_covid_deaths"
                        />
                    <TextView
                        android:id="@+id/casesDeathsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:textColor="@color/materialYellow"
                        />
                </LinearLayout>
            </LinearLayout>

            <NumberPicker
                android:id="@+id/countryNumberPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginStart="@dimen/value_16dp"
                android:layout_marginLeft="@dimen/value_16dp"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/value_10dp"
            android:layout_marginLeft="@dimen/value_16dp"
            android:layout_marginStart="@dimen/value_16dp"
            android:layout_marginRight="@dimen/value_16dp"
            android:layout_marginEnd="@dimen/value_16dp"
            android:text="@string/main_covid_cases_origin"
            android:textColor="#616161"
            android:linksClickable="true"
            android:autoLink="web"
            android:textColorLink="@color/materialBlue"
            android:layout_marginBottom="@dimen/value_20dp"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>