                            app:civ_border_width="1dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/value_5dp"
                            android:layout_toRightOf="@+id/logo_user_1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/member_1"
                                android:textColor="#414141"
                                android:textSize="@dimen/value_text_size_15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/member_1_intro"
                                android:textColor="#777777"
                                android:textSize="@dimen/value_text_size_11sp" />


                        </LinearLayout>
                    </RelativeLayout>

                    <include layout="@layout/list_separator" />

                    <RelativeLayout
