        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toa_footer"
        android:layout_below="@+id/drawer_header_contact_email"
        android:layout_marginStart="@dimen/nav_cardview_left_padding"
        android:layout_marginLeft="@dimen/nav_cardview_left_padding"
        android:layout_marginTop="@dimen/nav_cardview_top_margin"
        android:layout_marginEnd="@dimen/nav_cardview_right_padding"
        android:layout_marginRight="@dimen/nav_cardview_right_padding"
        app:cardCornerRadius="@dimen/main_cards_radius"
        app:cardElevation="@dimen/basic_cardview_elevation_3dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/nav_cardview_conttent_padding">

        <LinearLayout
