<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prevention_blue_bg_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/main_cards_radius"
                app:cardElevation="@dimen/value_2dp"
                app:cardUseCompatPadding="false">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:paddingLeft="@dimen/value_10dp"
                    android:paddingTop="@dimen/value_10dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/prevention_hands_why_content_first"
                    android:textColor="@color/prevention_details_text_color"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/app_main_text_size" />


                <ImageView
                    android:id="@+id/card1_left_imageview"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_orange_light_shape" />

                <ImageView
                    android:id="@+id/card1_right_imageview"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right|bottom"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_orange_light_shape" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10dp"
                app:cardCornerRadius="@dimen/main_cards_radius"
                app:cardUseCompatPadding="false">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFF9"
                    android:paddingLeft="@dimen/value_10dp"
                    android:paddingTop="@dimen/value_10dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/prevention_hands_why_content_second"
                    android:textColor="@color/prevention_details_text_color"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/app_main_text_size" />


                <ImageView
                    android:id="@+id/card2_left_imageview"
                    android:layout_width="@dimen/value_8dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_orange_light_shape" />

                <ImageView
                    android:id="@+id/card2_right_imageview"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right|bottom"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_orange_light_shape" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginBottom="@dimen/value_5dp"
                app:cardCornerRadius="@dimen/main_cards_radius"
                app:cardUseCompatPadding="false">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:paddingLeft="@dimen/value_10dp"
                    android:paddingTop="@dimen/value_10dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/prevention_hands_why_content_third"
                    android:textColor="@color/prevention_details_text_color"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/app_main_text_size" />

                <ImageView
                    android:id="@+id/card3_left_imageview"
                    android:layout_width="@dimen/value_8dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_orange_light_shape" />

                <ImageView
                    android:id="@+id/card3_right_imageview"
                    android:layout_width="@dimen/value_8dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right|bottom"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bg_orange_light_shape" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

